<p style="color: green"><%= notice %></p>

<% content_for :title, "Tasks" %>

<h1>Tasks</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Completed</th>
      <th>Category</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.is_completed ? "Yes" : "No" %></td>
        <td><%= task.category.name if task.category %></td>
        <td>
          <%= link_to "Show", task, class: "btn btn-info btn-sm" %>
          <%= link_to "Edit", edit_task_path(task), class: "btn btn-warning btn-sm" %>
          <%= link_to "Delete", task, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div>
  <%= link_to "New Task", new_task_path, class: "btn btn-primary" %>
</div>
